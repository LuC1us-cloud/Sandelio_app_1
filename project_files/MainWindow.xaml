<Window x:Class="Sandelio_app_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="650" Width="1200">
    <Grid x:Name="OuterGrid" Background="#FF0C0E13">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Grid.Column="0">
            <Border  Margin="10"
                     CornerRadius="7"
                     Background="#FF181A20">
                <StackPanel>
                    <Button Content="Open Folder" Height="30" Margin="10, 10, 10, 0" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="0" Click="Button_Open_Folder" />
                    <Button Content="Settings" Height="30" Margin="10, 10, 10, 0" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="0" Click="Button_Settings_Click" />
                </StackPanel>
            </Border>
        </Grid>

        <Border Grid.Row="1"
                Grid.Column="1"
                CornerRadius="4"
                Margin="10"
                BorderBrush="#FF181A20"
                BorderThickness="3">
            <Canvas x:Name="canvas"
                AllowDrop="True"
                Drop="Canvas_Drop"
                Background="#FF0E1015">
                <Label x:Name="LoadingLabel" Content="" Background="Transparent" Foreground="White" FontSize="72" Visibility="Visible" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            </Canvas>
        </Border>

        <Grid Grid.Row="1"
              Grid.Column="2">
            <Border CornerRadius="4"
                Margin="10"
                BorderBrush="#FF181A20"
                BorderThickness="3">
                <StackPanel>
                    <Canvas x:Name="dropArea"
                            AllowDrop="True"
                            Drop="Canvas_Drop"
                            Margin="5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch">
                    </Canvas>
                </StackPanel>
            </Border>
        </Grid>

        <Border CornerRadius="4"
                    Margin="5"
                    Background="#FF181A20"
                    Grid.Column="1">
            <Grid Grid.Row="0"
                    Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="130" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0">
                    <Button Content="Add"  Margin="5" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" Click="Button_Add_New_Pallet" />
                    <Button Content="Remove" Margin="5" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" Click="Button_Remove_Current_Pallet" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Column="1">
                    <Button Content="◄" Margin="5" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" Click="Button_Previous_Pallet_View_Click" />
                    <Label x:Name="currentPalletNumber" Content="0/0" Margin="5" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" />
                    <Button Content="►" Margin="5" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" Click="Button_Next_Pallet_View_Click" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2">
                    <Button Content="Generate Excel" Margin="5" FontSize="15" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" Click="Button_Generate_Excel_Sheet" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="0"
              Grid.Column="2">
            <Border CornerRadius="4"
                Margin="5"
                BorderBrush="#FF181A20"
                Background="#FF181A20"
                BorderThickness="3">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label x:Name="currentPalletLength" Content="Length: 0" FontSize="13" FontWeight="SemiBold" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="2" Background="#FF272A30"/>
                    <Label x:Name="currentPalletWidth" Content="Width: 0" FontSize="13" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="5" BorderBrush="#FF272A30" HorizontalAlignment="Stretch" Margin="2" />
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Row="2"
              Grid.Column="1">
            <Border CornerRadius="4"
                    Margin="5"
                    Background="#FF181A20">
                <WrapPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Center">
                    <Label x:Name="OrderCountLabel" Content="Orders: 0" Height="40" Margin="2" FontSize="16" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="2" BorderBrush="#FF1B1919" />
                    <Label x:Name="PalletCountLabel" Content="Pallets: 0" Height="40" Margin="2" FontSize="16" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="2" BorderBrush="#FF1B1919" />
                    <Label x:Name="LoadingDateLabel" Content="Date: 0" Height="40" Margin="2" FontSize="16" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="2" BorderBrush="#FF1B1919" />
                    <Label x:Name="ClientInfoLabel" Content="Client info: " Height="40" Margin="2" FontSize="16" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="2" BorderBrush="#FF1B1919" />
                    <Label x:Name="ClientNameLabel" Content="Client Name: " Height="40" Margin="2" FontSize="16" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="2" BorderBrush="#FF1B1919" />
                    <Label x:Name="TotalItemsLabel" Content="Items: 0" Height="40" Margin="2" FontSize="16" FontWeight="SemiBold" Background="#FF272A30" Foreground="#FFDADCE1" BorderThickness="2" BorderBrush="#FF1B1919" />
                </WrapPanel>
            </Border>
        </Grid>
    </Grid>
</Window>